<div class="columns is-centered mb-6">
  <div class="column is-two-thirds-tablet is-half-desktop has-background-white-bis">
    <h2 class="title is-3">Create New Book</h2>
    <%= simple_form_for(@book, url: user_books_path(current_user)) do |f| %>
      <%= f.error_notification %>
      <div class="field">
        <div class="control">
          <%= f.input :title,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "title", class: "input" },
                      wrapper: false,
                      label_html: { class: "label"} %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :category,
                      label: 'Category',
                      collection: @categories,
                      prompt: "Select Category",
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label"} %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.button :submit, "Create Book", class: "button is-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
